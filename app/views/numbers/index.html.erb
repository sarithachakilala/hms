<h1>Listing numbers</h1>

<table>
  <tr>
    <th>Org location</th>
    <th>Org code</th>
    <th>Name</th>
    <th>Value</th>
  </tr>

<% @numbers.each do |number| %>
  <tr>
    <td><%=h number.org_location %></td>
    <td><%=h number.org_code %></td>
    <td><%=h number.name %></td>
    <td><%=h number.value %></td>
    <td><%= link_to 'Show', number %></td>
    <td><%= link_to 'Edit', edit_number_path(number) %></td>
    <td><%= link_to 'Destroy', number, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New number', new_number_path %>
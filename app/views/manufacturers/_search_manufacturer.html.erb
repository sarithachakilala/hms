<table id="tablesorter-demo" class="tablesorter" border="0" cellpadding="0" cellspacing="1">
<thead><tr>
	<th>S.No</th>
    <th>Org code</th>
    <th>Org location</th>
    <th>Manufacturer Name</th>
    <th>Manufacturer Code</th>
	<th colspan="3">Permissions</th>
  </tr>
</thead>
<tbody>
 <% @i=0 %>
	<% @manufacturer.each do |manufacturer| %>
	<% if((@i%2)==0) 
		id="datacelltwo"
	else
		id="datacellone"
	end %>
  <tr class='<%= id %>'>
	<td><%= @i=@i+1 %></td>
    <td><%=h manufacturer.org_code %></td>
    <td><%=h manufacturer.org_location %></td>
    <td><%=h manufacturer.manufacturer_name %></td>
    <td><%=h manufacturer.manufacturer_code %></td>
	<td align="center"><%= link_to image_tag("buttons/display1.png", :class => "info", :border =>"0"), manufacturer %></td>
	<td align="center"><%= link_to image_tag("buttons/modify.png", :class => "info", :border =>"0"), edit_manufacturer_path(manufacturer) %></td>
	<td align="center"><%= link_to image_tag("buttons/delete.png", :class => "info", :border =>"0"), manufacturer, :confirm=> 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</tbody>
</table>
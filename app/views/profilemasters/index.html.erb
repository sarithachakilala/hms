<% @i=0 %>
<% @profilemasters.each do |profilemaster| %>
	<% if((profilemaster.id % 2)==0) 
		id="datacellone"
	else
		id="datacelltwo"
end %>
    <tr class='<%= id %>' style="height:30px">
		<td><%=h @i=@i+1 %></td>
		<td><%=h profilemaster.profile_name %></td>
		<td align="center"><%= link_to '&nbsp;&nbsp;&nbsp;show&nbsp;&nbsp;&nbsp;', profilemaster, :class=>"submit_button" %></td>
    <td align="center"><%= link_to '&nbsp;&nbsp;&nbsp;edit&nbsp;&nbsp;&nbsp;', edit_profilemaster_path(profilemaster), :class=>"submit_button" %></td>   
   <td align="center"><%= link_to '&nbsp;&nbsp;&nbsp;delete&nbsp;&nbsp;&nbsp;', profilemaster, :confirm => 'Are you sure?', :method => :delete, :class=>"submit_button" %></td>
		
  </tr>
<% end %>
</table>
</div>
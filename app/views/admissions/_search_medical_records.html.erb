<table id="tablesorter-demo" class="tablesorter" border="0" cellpadding="0" cellspacing="1">
<thead>
  <tr>
	<th>S.No</th> 	
     <th>Org Code</th>
    <th>Admn.No</th>
    <th>MR No</th>
	<th>Patient Name</th>
    <th>Admn.Date</th>
    <th>Bed</th>
    <th>Room</th>
    <th>Ward</th>
    <th colspan="3">Permissions</th>
	</thead>
<tbody>
<% @i=0 %>
<% @admissions.each do |admission| %>
<% if((@i % 2)==0) 
		id="datacellone"
	else
		id="datacelltwo"
  end %>
	<tr class='<%= id %>'>
	<td><%= @i+=1 %></td>
    <td><%=h admission.org_code %></td>
    <td><%=h admission.admn_no %></td>
    <td><%=h admission.mr_no %></td>
	<td><%=h admission.patient_name %></td>
    <td><%=h admission.admn_date %></td>
   	<td><%=h admission.bed %></td>
    <td><%=h admission.room %></td>
    <td><%=h admission.ward %></td>
    <td  align="center"><a href="admissions/<%= admission.id %>?user_id=<%= @user_id %>"><image src="images/buttons/display1.png" size = "54x21" border ="0" /></a></td>
	<td  align="center"><a href="admissions/<%= admission.id %>/edit?user_id=<%= @user_id %>"><image src="images/buttons/modify.png" size = "54x21" border ="0" /></a></td>
  </tr>
<% end %>
</tbody>
</table>
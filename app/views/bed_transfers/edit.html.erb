  </tr>
  <tr>
		
    	<td>MR.No</td>
		<td><%= f.text_field :mr_no, :class =>"text_field", :id => "mr_no", :readonly =>true %>
    	
		<td>Admn Date</td>
        <td><%= f.text_field :admn_date, :class =>"text_field", :readonly =>true, :value => "#{@date}"  %></td>

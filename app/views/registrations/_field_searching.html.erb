<table id="tablesorter-demo" class="tablesorter" border="0" cellpadding="0" cellspacing="1">
<thead>
  
  <tr>
	<th>S.No</th> 	
    <th>MR No</th>
	<th>Reg.Date</th>
	<th>Patient Name</th>
	<th>Age</th>
	<th>City</th>
	<th colspan="3">Permissions</th>
  </tr>
  <br />
</thead>
<tbody>
<% @i=0 %>
<% @i=@registrations.length %>
<% @registrations.each do |registration| %>
<% if((@i % 2)==0) 
		id="datacellone"
	else
		id="datacelltwo"
  end %>
  <tr class='<%= id %>'>
	<td><%= @i+=1 %></td>
    <td><%=h registration.mr_no %></td>
    <td><%=h registration.reg_date %></td>
    <td><%=h registration.patient_name %></td>
    <td><%=h registration.age %></td>
    <td><%=h registration.city %></td>
    <td align="center" class="submit_button"><%= link_to 'show', registration %></td>
	<td align="center"  class="submit_button"><%= link_to 'edit', edit_registration_path(registration) %></td>
 </tr>
<% end %>
</table>

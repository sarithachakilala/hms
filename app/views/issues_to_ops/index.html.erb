	<td width="15%"><input type="text" style="width:100%" id="paid_amt" onKeyUp = "search_function(id,event)" placeholder="Search Paid Amount"></td>
					<%= observe_field 'paid_amt', :frequency => 0.01,
					:update => :name,
					:url => {:action => :observe_field_ex },
					:with => "'issue_no='+escape($('issue_no').value)+ '&issue_date=' + escape($('issue_date').value)+ '&due_amount=' + escape($('due_amount').value)+ '&paid_amt=' + escape($('paid_amt').value)" %>

	
	<td colspan="3" align="center" valign="top">
		<%= link_to 'Clear','', :class=>"new1",:onClick => "clear_file()"  %>
	</td>

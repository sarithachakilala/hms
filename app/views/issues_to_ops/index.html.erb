					<%= javascript_include_tag:defaults %>
					<%= observe_field 'issue_no', :frequency => 0.01,
					:update => :name,
					:url => {:action => :observe_field_ex },
					:with => "'issue_no='+escape($('issue_no').value)+ '&issue_date=' + escape($('issue_date').value)+ '&due_amount=' + escape($('due_amount').value)+ '&paid_amt=' + escape($('paid_amt').value)" %>
	<td width="15%"><input type="text" style="width:100%" id="issue_date" onKeyUp = "search_function(id,event)" placeholder="Search Issue date"></td>
					<%= observe_field 'issue_date', :frequency => 0.01,
					:update => :name,
					:url => {:action => :observe_field_ex },
					:with => "'issue_no='+escape($('issue_no').value)+ '&issue_date=' + escape($('issue_date').value)+ '&due_amount=' + escape($('due_amount').value)+ '&paid_amt=' + escape($('paid_amt').value) " %>
	<td width="15%"><input type="text" style="width:100%" id="due_amount" onKeyUp = "search_function(id,event)" placeholder="Search Total Amount"></td>

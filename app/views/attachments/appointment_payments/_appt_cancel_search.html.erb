<% if(@appt_cancels[0]) %>
<div align="center" width="100%">
<table width="100%" id="tablesorter-demo" class="tablesorter" border="0" cellpadding="0" cellspacing="1">
 <thead> 
  <tr>
    <th>S.No</th>
    <th>MR No</th>
    <th>Patient Name</th>    
    <th>Consultant</th>
    <th>Permissions</th>
  </tr>
 </thead>
<% @i=0 %>
<% @appt_cancels.each do |appt_cancel| %>
<% if((@i%2)==0) 
		id="datacelltwo"
	else
		id="datacellone"
  end %>
  <tr class='<%= id %>'>
			<td><%= @i+=1 %></td>
    			<td><%=h appt_cancel.mr_no %></td>
    		<%reg= Registration.find_by_mr_no(appt_cancel.mr_no) %>	
    			<td><%= reg.patient_name %></td>
    			<td><%=h appt_cancel.consultant_id %></td>
				<td align="center"><a href="/appointment_payments/destroy/<%= appt_cancel.id %>"><input type="button" value="Cancel" class="new1"></a></td>
	</tr>
	</tr>
<% end %>
</table>
</div>
<% else %>
	<br/><br/><br/><br/><center>
	<font size="3" color="red">No Appointments</font></center>
<% end %>
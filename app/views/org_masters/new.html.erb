	<td><%= submit_tag "", :value => " Reset ", :type => "reset",  :class => "submit_button" %></td>
	<td valign="middle"><%= link_to "Back",  org_masters_path, :class=>"new1" %></td>
</tr>
</table>	
<% end %>

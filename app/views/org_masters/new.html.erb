						<td class="td1"><%= i+=1 %></td>
						<td class="td2"><%= a.text_field :branch_code, :size =>35, :class => "nbb" %></td>
						<td class="td2"><%= a.text_field :branch_name, :size =>35, :class => "nbb" %></td>
						<td class="td2"><%= a.text_field :address, :size =>35, :class => "nbb" %></td>
						<td class="td2"><%= a.text_field :ph_no, :size =>35, :class => "nbb" %></td>

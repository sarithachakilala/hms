<div id="form_name_display">	<table width="100%" border=0" cellspacing="0" cellpadding="0">  	<tr>    		<td width="50%">Reports >> Pharmacy Report >>&nbsp;&nbsp;&nbsp;<a HREF='/goodsrecieptnotemasters/purchase_vat_report/1' class="nav" style="text-decoration:none;">Purchase Vat</a></td>    		<td align="right" width="50%"><%= format_date(:short, Date.today ) %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>  	</tr>	</table></div><div id="form_data"><script type="text/javascript"> 		function check()	{		var month=document.getElementById('month_name').value		var year=document.getElementById('year_name').value			req = new Ajax.Request('/goodsrecieptnotemasters/vat_purchase/1', {				method: 'get',				parameters: {month:month,year:year},				onComplete: function(transport) {				processReqChange(transport);				}			});		function processReqChange(req) 		{			if(req.responseText=="No Records")				document.getElementById("table").value=req.responseText			else				document.getElementById("table").innerHTML=req.responseText		}	}	</script><body onLoad="check();"><font size="3" face="Calibri"><fieldset><legend><div class="font"><b>Search</b></div></legend><table width="30%"  align="center"><% @date=format_date(:short, Date.today ).split("-") %><tr>	<td><label for="item_name">Month</label></td>	<td><%= select("month", "name",[['Jan'],['Feb'],['Mar'],['Apr'],['May'],['Jun'],['Jul'],['Aug'],['Sep'],['Oct'],['Nov'],['Dec']], {:prompt => @date[1]}) %></td>	<td><label for="item_name">Year</label></td>	<% 	years=Array.new %>	<% for i in 0..20 %>		<% years[i]=2012+i %>	<% end %>	<td><%= select("year", "name",years, {:prompt => false}) %></td>	<td colspan="2"><a href="javascript:void(0)" class="new1" onClick="javascript:check()" >Search</a></td></tr>	</table></fieldset><div class="font">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<b>Results :</b></div><div id="table" align ="center"></div> <center>   <iframe src="" id="frame" width="90%" height="400px" align="center" style="border:none"></iframe></center></body>